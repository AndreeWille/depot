<article>
  <h2>
    Your Cart
  </h2>
  <table>
    <% if cart.line_items.any? %>
      <%= render(cart.line_items) %>
    <% else %>
      <%= render('line_items/empty_line_item') %>
    <% end %>
    <tfoot>
      <tr>
        <th colspan="2">
          Total:
        </th>
        <td class="price">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Empty Cart', cart, method: :delete, data: { confirm: 'Are you sure'}, remote: true %>
</article>
